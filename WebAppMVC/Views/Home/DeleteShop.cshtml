@model WebAppMVC.Models.ShopProduct

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title">Удаление товара</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button> 
    </div>
    <div class="modal-body">
        <form method="post" asp-action="DeleteShop" asp-controller="Home">
           
            <div class="input-group mb-3" hidden>
                <input type="text" class="form-control" asp-for="id"/>
            </div>
            <div>
                <label class="control-label">Покупатель: </label>
            </div>
             <label asp-for="DetailClient.Client.FirstName" class="form-label">Имя</label>
            <div class="input-group mb-3">
                <input type="text" readonly class="form-control-plaintext" asp-for="DetailClient.Client.FirstName"/>
            </div>

            <label asp-for="DetailClient.Client.LastName" class="form-label">Фамилия</label>
            <div class="input-group mb-3">
                <input type="text" readonly class="form-control-plaintext" asp-for="DetailClient.Client.LastName"/>
            </div>

            <label asp-for="DetailClient.Client.Patronymic" class="form-label">Отчество</label>
            <div class="input-group mb-3">
                <input type="text" readonly class="form-control-plaintext" asp-for="DetailClient.Client.Patronymic"/>
            </div>

            <label asp-for="BuyDate" class="form-label">Дата покупки:</label>
            <div class="input-group mb-3">
                <input type="date" readonly class="form-control-plaintext" asp-for="BuyDate"/>
            </div>

            <label asp-for="CheckAmmount" class="form-label">Сумма чека:</label>
            <div class="input-group mb-3">
                <input type="text" readonly class="form-control-plaintext" asp-for="CheckAmmount"/>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Удалить" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>
